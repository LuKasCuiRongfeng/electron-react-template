{
  "name": "crf-app",
  "version": "0.0.0",
  "main": "src/main/main.js",
  "productName": "crf app",
  "scripts": {
    "start": "concurrently \"npm run dev\" \"npm run electron\"",
    "dev": "vite",
    "build:vite": "vite build",
    "build": "npm run build:vite && electron-builder",
    "serve": "vite preview",
    "electron": "wait-on tcp:3000 && electron ."
  },
  "build": {
    "appId": "luka.cui.super@gmail.com",
    "asar": false,
    "directories": {
      "output": "release/vite${version}"
    },
    "files": [
      "!node_modules",
      "dist/**"
    ],
    "extraResources": {
      "from": "src/preload",
      "to": "app/src/preload"
    },
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^1.6.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "concurrently": "^6.2.0",
    "electron": "^13.1.2",
    "electron-builder": "^22.11.7",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "redux": "^4.1.0",
    "vite": "^2.3.7",
    "wait-on": "^5.3.0"
  }
}
